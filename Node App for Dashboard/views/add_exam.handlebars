<a href="/:username/exams">Go Back</a>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Add Exam</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
      <form method="POST" action="/:username/addexam/submit">
        <div class="form-group">
                      <label>Course ID</label>
                      <input type="text" class="form-control" name="cid" placeholder="Course ID">
                    </div>
                    <div class="form-group">
                      <label>Exam ID</label>
                      <input type="text" class="form-control"  name="eid" placeholder="Exam ID">
                    </div>
                    <div class="form-group">
                      <label>Name</label>
                      <input type="text" class="form-control"  name="examName" placeholder="Exam Name">
                    </div>
                    <div class="form-group">
                      <label>Exam Date</label>
                      <input type="date" class="form-control"  name="examDate" placeholder="Exam Date">
                    </div>
                    <div class="form-group">
                      <label>Is Active</label>
                      <input type="text" class="form-control"  name="isActive" placeholder="Is Active">
                    </div>
                    <input type="hidden" name="username" value={{username}}>
                    <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    </div>
  </div>
</div>
